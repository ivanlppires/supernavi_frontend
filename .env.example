# API URL - Backend server
VITE_API_URL=https://api.supernavi.app

# Storage URL - For slide images (optional, dziPath may contain full URLs)
VITE_STORAGE_URL=

# Google OAuth - Client ID from Google Cloud Console
VITE_GOOGLE_CLIENT_ID=

# Edge Agent Configuration (for edge-first tile loading and uploads)
# The agent ID configured on the local edge device (e.g., "lab01")
# When configured, the frontend will first try to load tiles via /edge/{agentId}/...
# If the edge is unavailable, falls back to cloud preview via /preview/...
VITE_EDGE_AGENT_ID=

# Direct URL to the local edge agent (for file uploads)
# When edge is connected and this URL is reachable, uploads go directly to edge
# The edge watcher will automatically process uploaded slides
VITE_EDGE_URL=http://localhost:3000

# Health check timeout in milliseconds (default: 500)
# Lower values = faster fallback to cloud, higher values = more patience for edge
VITE_EDGE_HEALTH_TIMEOUT_MS=500
